%
% Commands
%


\newcommand{\sectionlike}[1]{
	\section*{\centering \MakeUppercase{#1}}
	\addtocontents{toc}{\setlength{\cftsecnumwidth}{0em}}
	\addcontentsline{toc}{section}{\MakeUppercase{#1}}
	\addtocontents{toc}{\setlength{\cftsecnumwidth}{1.5em}}
}

\newcommand{\centeredgraphics}[3]{
	\begin{figure}[H]
		\centering
		\includegraphics[width=0.75\textwidth]{{#1}}
		\caption{#2}
		\label{#3}
	\end{figure}
}

\newcommand{\unit}[1]{
	\ensuremath{\, \mathrm{#1}}
}

\newcommand{\wordhangindent}[1]{
	\settowidth{\hangindent}{#1}
	\hangafter=1
}

% adds a forced line break inside a table cell
%
% from: https://tex.stackexchange.com/q/2441
\newcommand{\specialcell}[2][c]{
	\begin{tabular}
		[#1]{@{}c@{}}#2
	\end{tabular}
}
