%
% Paper size
%


% a4paper (set using base documentclass extarticle)


%
% Margins
%


\RequirePackage{geometry}


\geometry{left=30mm}
\geometry{right=15mm}
\geometry{top=20mm}
\geometry{bottom=20mm}


%
% Spacings
%


\linespread{1.3}
\frenchspacing


%
% Indents
%


\RequirePackage{indentfirst}


\setlength\parindent{1.25cm}


%
% Page number: bottom left
%


\RequirePackage{fancyhdr}
\RequirePackage{tocloft}


% enable fancyhdr
\pagestyle{fancy}
\tocloftpagestyle{fancy}
% clear the header and the footer
\fancyhf{} 
% remove the top horizontal bar
\renewcommand{\headrulewidth}{0pt}
% set the new right footer
\fancyfoot[R]{\thepage}


%
% Word breaks: no
%


\tolerance=1
\emergencystretch=\maxdimen
\hyphenpenalty=10000
\hbadness=10000
